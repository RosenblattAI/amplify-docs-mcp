{
  "name": "mcpdocs",
  "version": "0.2.3",
  "description": "MCP server for documentation search",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "mcpdocs": "bin/mcp"
  },
  "files": [
    "bin",
    "src",
    "data",
    "docs-mcp.config.json"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/http-adapter.js",
    "dev": "tsc --watch & node dist/index.js",
    "dev:http": "tsc --watch & node dist/http-adapter.js",
    "build:js": "node scripts/build.js",
    "postbuild": "node scripts/build.js",
    "deploy:worker": "wrangler deploy",
    "deploy:aws": "./aws/deploy.sh",
    "deploy:aws-build": "./aws/deploy.sh build",
    "deploy:aws-stack": "./aws/deploy.sh stack",
    "deploy:aws-delete": "./aws/deploy.sh delete",
    "deploy:aws-codebuild": "./aws/deploy-codebuild.sh",
    "fix:deps": "./fix-dependencies.sh"
  },
  "keywords": [
    "probe",
    "mcp",
    "documentation",
    "search"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@buger/probe": "*",
    "@modelcontextprotocol/sdk": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "simple-git": "^3.22.0",
    "tar": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.14.0",
    "typescript": "^5.8.3"
  }
}
